<table class="table-auto w-full border-collapse">
  <thead>
    <tr>
      <th class="border px-4 py-2">Attribute</th>
      <th class="border px-4 py-2">Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="border px-4 py-2">Day</td>
      <td class="border px-4 py-2"><%= @master_timetable.day.name %></td>
    </tr>
    <tr>
      <td class="border px-4 py-2">Time Slot</td>
      <td class="border px-4 py-2">
        <%= @master_timetable.time_slot.start_time.strftime('%I:%M %p') %> -
        <%= @master_timetable.time_slot.end_time.strftime('%I:%M %p') %>
      </td>
    </tr>
    <tr>
      <td class="border px-4 py-2">Subject</td>
      <td class="border px-4 py-2"><%= @master_timetable.subject.name %></td>
    </tr>
    <tr>
      <td class="border px-4 py-2">Division</td>
      <td class="border px-4 py-2"><%= @master_timetable.division.division %></td>
    </tr>
    <tr>
      <td class="border px-4 py-2">Teacher</td>
      <td class="border px-4 py-2"><%= @master_timetable.teacher.name %></td>
    </tr>
  </tbody>
</table>

<% unless action_name == "show" %>
  <%= link_to "Show this master timetable", @master_timetable, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Edit this master timetable", edit_master_timetable_path(@master_timetable), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <hr class="mt-6">
<% end %>
